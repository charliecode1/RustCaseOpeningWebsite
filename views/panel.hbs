<!doctype HTML>
<html>

<head>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
        crossorigin="anonymous"></script>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/panel.js"></script>
    

    <link rel="stylesheet" href="/css/bootstrap.min.css">


</head>

<body>

    {{> adminNavigationbar }}


    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">

            </div>
            <div class="col-lg-9">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Items</th>
                            <th scope="col">Used</th>
                            <th scope="col">Owner</th>
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" style="padding: 0;">
                                        Actions
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" id="deleteButton" href="">Delete</a>
                                    </div>
                                </div>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cases}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.price}}</td>
                            <td>
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" style="padding: 0;">
                                    Items
                                </a>
                                <div class="dropdown-menu">
                                    {{#each this.items}}
                                    <a class="dropdown-item">{{this.item.name}} | {{this.chance}}%</a>
                                    {{/each}}
                                </div>
                            </td>
                            <td>{{this.used}}</td>
                            <td>{{this.owner}}</td>
                            <td>
                                <input type="checkbox" class="checkbox" data-name="{{this.name}}">
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>