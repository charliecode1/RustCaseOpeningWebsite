<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Deposit</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="/js/jquery.min.js"></script>
    <script src="/js/deposit.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="/css/deposit.css">    

    <link rel="stylesheet" href="/css/pushy-buttons.css">



</head>
<body>
    
    <h1 id="title">Deposit</h1>

    <p id="value">Value: 0$</p>

    <div id="inventory-container">

        <ul id="item-list">

            {{#each items}}

            <li class="item" data-value="{{this.price}}" data-id="{{this.info.id}}">
                <img class="item-image" alt="item-image" src="{{this.image}}">
                
                <center><p class="item-name">{{this.info.name}}</p></center>
                <center><p class="item-price">{{this.price}}$</p></center>
            </li>

            {{/each}}

        </ul>

    </div>

    <div id="button-container">
        <button class="pushy__btn pushy__btn--lg pushy__btn--red" id="submit-button">Deposit</button>   
    </div>

</body>
</html>